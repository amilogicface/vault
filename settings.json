{
	"workbench.iconTheme": "material-icon-theme", // Устанавливает тему для иконок
	"workbench.startupEditor": "newUntitledFile", // Убирает приветственный экран
	"git.ignoreMissingGitWarning": true, // Отключает сообщение о отсутствии профиля Git
	"workbench.activityBar.visible": true, // Отключает отображение маленькой боковой панели действий
	"files.defaultLanguage": "html", // Устанавливает стандартный язык для нового документа
	"editor.glyphMargin": false, // Отключает точки остановки для отлаживания кода
	"editor.parameterHints.enabled": false, // Отключает документацию при редактировании кода
	"editor.folding": false, // Отключает возможность сворачивать блоки кода
	"security.workspace.trust.enabled": false, // Отключает запросы о доверии при открытии документов
	"editor.insertSpaces": false, // Включает замену tab на пробелы
	"editor.linkedEditing": true, // Включает связанное редактирование
	"editor.hover.enabled": false, // Отключает подсказки при наведении
	"editor.tabSize": 4, // Устанавливает размер отступов
	"explorer.confirmDragAndDrop": false, // Отключает подтверждение при drag and drop файлов
	"explorer.confirmDelete": false, // Отключает подтверждение удаления файла
	"breadcrumbs.enabled": false, // Отключает хлебные крошки
	"editor.detectIndentation": false, // Отключает индикацию отступов других пользователей
	"editor.minimap.enabled": false, // Отключает миникарту
	"editor.cursorBlinking": "smooth", // Включает плавную прокрутку
	"workbench.editor.closeEmptyGroups": false,
	"workbench.layoutControl.enabled": false,
	"editor.mouseWheelZoom": true, // Включает возможность зумирования мышкой
	"editor.formatOnSave": true, // Включает автоматическое форматирование при сохранении
	"editor.smoothScrolling": true, // Включает плавную прокрутку
	"telemetry.enableTelemetry": false, // Отключает телеметрию
	"telemetry.enableCrashReporter": false, // ОТключает отправку сообщений о сбоях
	"terminal.integrated.defaultProfile.windows": "Git Bash", // Устанавливает базовый язык терминала
	"editor.wordWrap": "on",
	"editor.guides.indentation": true,
	"editor.renderWhitespace": "none",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	"editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
	// Настройки LiveServer:
	"liveServer.settings.donotShowInfoMsg": true, // Отключает отображение сообщений от live server
	"liveServer.settings.donotVerifyTags": true, // Отключает предупреждающие сообщения от live server
	// Настройки компилятора Sass:
	"liveSassCompile.settings.showOutputWindowOn": "None", // Не показывать сообщение об успехе
	"liveSassCompile.settings.generateMap": false, // Не генерировать карту
	"liveSassCompile.settings.formats": [
		{
			"format": "expanded", // Форматировать без сжатия
			"extensionName": ".css", // Выходной формат
			"savePath": "./", // Сохранять в корневую директорию
			"indentType": "tab",
			"indentWidth": 1,
		}
	],
	// Настройки форматирования HTML:
	"html.format.wrapLineLength": 180,
	"[html]": {
		"editor.defaultFormatter": "vscode.html-language-features"
	},
	// Настройки форматирования JavaScript:
	"prettier.printWidth": 120, // Устанавливает максимальную длину строки
	"prettier.tabWidth": 4, // Устанавливает размер отступов для JS
	"prettier.singleQuote": true, // Замена всех двойных кавычек на одинарные
	"prettier.arrowParens": "avoid", // Убирает скобки у одинарных параметров стрелочных функций
	"prettier.useTabs": true, // Использует tab вместо пробелов
	"prettier.semi": false, // Убирает точки с запятой где не нужны
	"[javascript]": {
		// "editor.defaultFormatter": "vscode.typescript-language-features",
		"editor.defaultFormatter": "esbenp.prettier-vscode" // Установка prettier как базового регулятора оформления
	},
	// Блок настроек форматирования CSS:
	"scss.format.newlineBetweenSelectors": false,
	"css.format.newlineBetweenSelectors": false,
	"css.format.spaceAroundSelectorSeparator": true,
	"scss.format.spaceAroundSelectorSeparator": true,
	"[css]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"[scss]": {
		"editor.defaultFormatter": "vscode.css-language-features"
	},
	"[sass]": {
		"editor.defaultFormatter": "syler.sass-indented"
	},
	"stylelint.snippet": [
		"css",
		"less",
		"postcss",
		"scss",
		"sass"
	],
	"stylelint.validate": [
		"css",
		"less",
		"postcss",
		"scss",
		"sass"
	],
	"scss.validate": false,
	"css.validate": false,
	"less.validate": false,
	"editor.codeActionsOnSave": {
		"source.fixAll.stylelint": true
	},
	// Дополнительная настройка цветов редактора
	"workbench.colorCustomizations": {
		"editor.background": "#191b1f",
		"scrollbar.shadow": "#00000000",
		"widget.shadow": "#00000000",
		"editorGutter.background": "#191b1f",
		"titleBar.activeBackground": "#0f1113",
		"statusBar.background": "#0f1113",
		"editorIndentGuide.activeBackground": "#2eeff695",
		"editorBracketMatch.border": "#2eeff695",
		"editorBracketMatch.background": "#34e5eb45",
		"sideBar.background": "#17191c",
		"editorGroupHeader.tabsBackground": "#17191c",
		"tab.inactiveBackground": "#1b1e21",
		"editor.foldBackground": "#cfdfff07",
		"editorError.foreground": "#fc0303"
	},
	"cssPeek.peekFromLanguages": [
		"html",
		"django-html",
		"laravel-blade",
		"razor",
		"vue",
		"blade",
		"pug",
		"jade",
		"handlebars",
		"php",
		"twig",
		"md",
		"nunjucks",
		"javascript",
		"javascriptreact",
		"erb",
		"typescript",
		"typescriptreact",
		"HTML (Eex)",
		"html-eex",
		"ejs",
		"hbs",
		"svelte",
		"pug",
		"jade"
	],
	"ecsstractor_port.bem_nesting": true, // Учитывать БЭМ вложенность
	"ecsstractor_port.indentation": "    ", // Тип отступов при формировании БЭМ дерева
	"ecsstractor_port.add_comment": false,
	"workbench.colorTheme": "grigoryvp memory theme", // Базовая тема редактора
	"cSpell.language": "en,ru",
}
